<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScannerMot.Pages.EmployeesPage"
             BackgroundColor="{StaticResource BackgroundColor}"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <StackLayout Orientation="Vertical" 
                 VerticalOptions="Center"
                 HorizontalOptions="Center">
      <Button  BackgroundColor="{StaticResource MainColor}"
               TextColor="{StaticResource MenuFontColor}"
               Text="Agregar Empleado"
               Command="{Binding GoToCommand}" CommandParameter="NewEmployeePage"
               BorderRadius="20"/>
      <Button BackgroundColor="{StaticResource MainColor}"
              TextColor="{StaticResource MenuFontColor}"
              Command="{Binding GoToCommand}" CommandParameter="AllEmployeesPage"
              Text="Empleados"
              BorderRadius="20" />
    </StackLayout>
</ContentPage>